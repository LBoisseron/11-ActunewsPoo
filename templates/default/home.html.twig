{% extends "base.html.twig" %}

{% block title %}
    BanMwenFréLa | Lokal Lokal
{% endblock %}

{% block content %}

    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">KontanVwèZot</h1>
    </div>

    <div class="py-5 bg-light">
        <div class="container ">
            <div class="row">

                {% for article in articles %}
                <div class="col-md-4 mt-4">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="image/article/{{ article.image }}" alt="{{ article.titre }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.titre }}</h5>
                            <div class="card-text">
                                <p>{{ article.contenu|striptags|u.truncate(200, '...') }}</p>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="#" class="btn btn-primary">Lire la suite</a>
                                <small class="text-muted">{{ article.prenom }} {{ article.nom }}</small>
                            </div>
                        </div>
                    </div> <!-- Fin card -->
                </div>
                {% endfor %}

            </div>
        </div> <!-- Fin container -->
    </div>

{% endblock %}
